

<form action="/links/edit/{{link.id}}" method="POST">
    <div class="form-group">
        <input type="text" value="{{link.title}}" class="form-control" name="title" placeholder="Título" autofocus>
    </div>
        <div class="form-group">
            <textarea  name="description" rows="5" class="form-control" placeholder="Descripción">{{link.description}}</textarea>
        </div>
            <div enctype="multipart/form-data">
                <input name="uploadedfile" type="file" />
            </div>
                <div class="form-group">
                    <input type="text" value="{{link.city}}" class="form-control" name="city" placeholder="Ciudad">
                </div>
                    <div class="form-group">
                        <input type="text" value="{{link.barrio}}" class="form-control" name="barrio" placeholder="Barrio">
                    </div>
                        <div> 
                            <input type="checkbox" value="{{link.state}}" id="state" name="state" />
                            <label for="news">¿Problema resuelto?</label>
                        </div>
                            <div class="form-group">
                                <button>
                                    Almacenar
                                </button>
                        </div>
</form>